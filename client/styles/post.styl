.post
  position relative
  padding 20px
  padding-bottom 8px
  background-color rgba(0,0,0,0.25)
  margin-bottom 30px
  border-radius 4px
  
  &:hover
    .post-close
      display block



.post-new
.post-author
  border 1px solid rgba(255,255,255,0.2)

.post-title-wrapper
  // text-align center
  margin-bottom 10px
  
.post-title
  font-size 26px
  line-height 36px
  font-weight 400
  text-decoration none
  
  &:hover
    text-decoration none

.post-source
  text-decoration none

.post-close
  cursor pointer
  position absolute
  top 0
  right 0
  width 30px
  height 30px
  padding 10px
  opacity 0.25
  display none
  &:hover
    opacity 0.75
  img
    position absolute
    top 50%
    left 50%
    transform translate3d(-50%, -50%, 0)
    width 20px
    height 20px
    filter brightness(0) invert(1)
    -webkit-filter brightness(0) invert(1)

.no-posts
  font-size 20px

.reached-bottom
  color rgba(white, 20%)
  