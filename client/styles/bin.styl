.bin-title-wrapper
  margin-bottom 40px
  text-align center

.bin-title
  display inline-block
  
.bin-title
.bin-title-input
  font-size 46px
  line-height 60px
  font-weight 600
  text-align center
  
.bin-title-input
  border 0
  background-color transparent
  width 100%
  height 60px
  border-bottom 1px solid rgba(255,255,255,0.5)
  &:focus
    outline 0
  
.bin-title-edit
  font-size 16px
  font-weight 400
  margin-left 10px
  color rgba(255,255,255,0.25)
  
.bin-password-input
  border 0
  font-size 30px
  height 60px
  padding 0 10px
  text-align center
  width 75%
  display block
  margin 50px auto
  background-color transparent
  border-bottom 1px solid rgba(255,255,255,0.5)
  &:focus
    outline 0

.join-bin-error
  color #DE5A5A